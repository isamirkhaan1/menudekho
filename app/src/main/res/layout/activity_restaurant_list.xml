<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="1dp" android:layout_marginLeft="5dp"
    android:orientation="vertical" android:weightSum="10"
    tools:context="com.samirkhan.apps.citymenu.RestaurantListActivity">

    <ListView
        android:id="@+id/list_activity_restaurant_list"
        android:layout_width="match_parent" android:clickable="true"
        android:layout_height="match_parent" android:layout_weight="10"
        android:background="@android:color/transparent">

    </ListView>
    <TextView
        android:id="@+id/text_activity_restaurant_list_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_weight="10"
        android:layout_marginTop="7dp" android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="10dp" android:textStyle="bold"
        android:text="Tap a restaurant to visit their menu " />
</LinearLayout>
