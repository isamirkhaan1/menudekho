<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
     android:orientation="vertical" android:scrollbars="vertical"
    tools:context="com.samirkhan.apps.citymenu.ReviewsActivity" android:weightSum="10">

    <ListView
        android:id="@+id/list_reviews"
        android:layout_width="match_parent" android:layout_marginTop="5dp"
        android:layout_height="match_parent"  android:layout_weight="10" >
        </ListView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:gravity="center"
        android:textSize="10dp" android:textStyle="bold" android:visibility="gone"
        android:text="Select an time to read the review. "/>
</LinearLayout>
