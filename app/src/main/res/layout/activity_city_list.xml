<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginTop="1dp" android:layout_marginLeft="1dp" android:scrollbars="vertical"
    tools:context="com.samirkhan.apps.citymenu.CityListActivity" android:weightSum="10" android:orientation="vertical">

    <ListView
        android:id="@+id/list_activity_city_list"
        android:layout_width="match_parent" android:clickable="true"
        android:layout_height="match_parent" android:layout_weight="10" />
    <TextView
        android:id="@+id/text_item_city_list_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp" android:layout_marginBottom="2dp"
        android:gravity="center" android:textStyle="bold"
        android:text="Tap on a city to select as a default"
        android:textSize="10dp" />
</LinearLayout>
