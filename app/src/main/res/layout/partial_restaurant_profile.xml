<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.samirkhan.apps.citymenu.RestaurantHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content" android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_partial_restaurant_profile_mainlogo"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp">

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Green olive restaurants" android:textColor="@color/colorPrimary"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="-4dp">
                <TextView
                    android:id="@+id/text_partial_restaurant_profile_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food  ss"
                    android:textSize="12dp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_marginTop="2dp"
                    android:layout_marginLeft="30dp" android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textStyle="italic"
                        android:text="updated on"
                        android:textSize="9dp"/>
                    <TextView
                        android:id="@+id/text_partial_restaurant_profile_modified_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:layout_marginLeft="5dp"
                        android:textStyle="italic"
                        android:text="12 Dec 2015" android:textSize="9dp"/>


                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_map_marker" />

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/generalTextColor"
                    android:text="University road, Peshawar,Pk"
                    android:textSize="12dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="3dp"
                    android:src="@android:drawable/ic_menu_call" />

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/generalTextColor"
                    android:text="091-9988484"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/generalTextColor"
                    android:text="091-9989484"
                    android:textSize="12dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp" android:layout_marginTop="2dp"
                    android:src="@android:drawable/ic_dialog_info" />
                <TextView
                    android:id="@+id/text_partial_restaurant_profile_website"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:text="www.mcdonald.com"
                    android:textColor="#55d"
                    android:textSize="12dp" />
            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_partial_restaurant_profile_staring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginTop="10dp"
                android:layout_marginRight="10dp" android:paddingLeft="5dp" android:paddingRight="5dp"
                android:paddingTop="-5dp" android:paddingBottom="-20dp"
                android:gravity="center"
                android:background="@drawable/review_background"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_staring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="-20dp"
                    android:text="5"
                    android:textSize="11dp"/>

                <TextView
                    android:id="@+id/text_partial_restaurant_profile_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="388"
                    android:textSize="10dp" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp" android:gravity="center" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text=" FROM" android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/text_partial_restaurant_profile_time_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:textColor="@color/colorPrimary"
            android:text="09:00 AM"
            android:textSize="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:text=" TO"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/text_partial_restaurant_profile_time_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:text="11:00 PM"
            android:textSize="10dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginLeft="20dp"
            android:layout_marginTop="1dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Self Delivery"
                android:textSize="10dp" />

            <ImageView
                android:id="@+id/img_partial_restaurant_profile_delivery"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-6dp" android:layout_marginLeft="2dp"
                android:src="@drawable/ic_red_tick" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Darewro Partner"
                    android:textSize="10dp" />

                <ImageView
                    android:id="@+id/img_partial_restaurant_profile_darewro"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-4dp" android:layout_marginLeft="2dp"
                    android:src="@drawable/ic_cross" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>