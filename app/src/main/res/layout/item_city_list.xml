<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_item_city_list_img"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp" android:alpha="0.9"
        android:src="@drawable/default_restaurant" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:paddingBottom="1dp"
        android:paddingTop="5dp">

        <TextView
            android:id="@+id/text_item_city_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="City" android:textColor="@color/generalTextColor"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/text_item_city_list_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="State"
            android:textSize="12dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:layout_marginBottom="7dp"
        android:gravity="bottom|right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_item_city_list_rest_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="5"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/text_item_city_list_rest_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="restaurant"
            android:textSize="10dp" />
    </LinearLayout>
</LinearLayout>

