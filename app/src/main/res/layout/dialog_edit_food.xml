<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Edit Food"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Name"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_dialog_edit_food_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_marginLeft="12dp"
                    android:background="@drawable/custom_text_background_2"
                    android:digits="@string/text_only"
                    android:hint="e.g: Chicken Pizza"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food Price"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_dialog_edit_food_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:background="@drawable/custom_text_background_2"
                    android:hint="e.g: 300"
                    android:inputType="number"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Making time"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_dialog_edit_food_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp" android:layout_weight="10"
                    android:background="@drawable/custom_text_background_2"
                    android:hint="e.g: 30"
                    android:inputType="number"
                    android:textSize="12dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutes" android:layout_marginLeft="2dp"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_dialog_edit_food_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/custom_text_background_2"
                    android:digits="@string/text_with_numb"
                    android:gravity="left|top"
                    android:hint="Food description"
                    android:lines="3"
                    android:textSize="12dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flavours"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/text_dialog_edit_food_flavours"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_text_background_2"
                    android:digits="@string/text_with_numb"
                    android:layout_marginLeft="30dp"
                    android:gravity="left|top"
                    android:hint="Available flavours"
                    android:lines="3"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Icon"
                    android:textSize="12dp" />

                <Spinner
                    android:id="@+id/spin_dialog_edit_food_image"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="52dp"
                    android:background="@android:drawable/spinner_background"
                    android:textSize="11dp" />
            </LinearLayout>


            <CheckBox
                android:id="@+id/check_dialog_edit_food_avail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp" android:textSize="12dp"
                android:text="Food is now available" />
<View
    android:layout_width="match_parent"
    android:layout_height="1dp" android:layout_marginTop="10dp"
    android:background="#dadada" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="5dp" android:visibility="gone"
                android:textStyle="italic" android:textSize="12dp"
                android:text="* enter making time in minutes"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>