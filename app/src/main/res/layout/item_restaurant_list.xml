<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="10dp"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_marginTop="1dp">

    <ImageView
        android:id="@+id/img_item_restaurant_list_img"
        android:layout_width="@dimen/list_image_width"
        android:layout_height="@dimen/lsit_image_height"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp" android:alpha="0.9"
        android:src="@drawable/default_restaurant" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp" android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_restaurant_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant"
                android:textColor="@color/generalTextColor"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/text_item_restaurant_list_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp" android:gravity="right"
                android:layout_marginTop="-5dp"
                android:text="Fast Food" android:visibility="gone"
                android:textSize="10dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp" android:layout_marginLeft="2dp" >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/ic_map_marker" />

            <TextView
                android:id="@+id/text_item_restaurant_list_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Near asdflk sadlflas dfasdfklsadjfljasdkf salkdjfljaskfjkladsf lkdjalfjdfjas"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/lsit_image_height"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lsit_image_height"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_item_restaurant_list_star"
                android:layout_width="25dp"
                android:layout_height="25dp" android:layout_marginTop="2dp"
                android:alpha="0.7"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/text_item_restaurant_list_staring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_item_restaurant_list_star"
                android:layout_marginRight="0dp"
                android:layout_marginTop="-17dp"
                android:text="4.5"
                android:textColor="@color/colorPrimary"
                android:textSize="8dp" android:textStyle="bold" />

            <TextView
                android:id="@+id/text_item_restaurant_list_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="38"
                android:textColor="@color/generalTextColor"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
